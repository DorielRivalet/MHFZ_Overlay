<!-- -->
    <Window x:Class="MHFZ_Overlay.ConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit" 
        xmlns:uc="clr-namespace:MHFZ_Overlay.controls"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        xmlns:local="clr-namespace:MHFZ_Overlay" xmlns:addresses="clr-namespace:MHFZ_Overlay.addresses" d:DataContext="{d:DesignInstance Type=addresses:AddressModel}"
        xmlns:localui="clr-namespace:MHFZ_Overlay.UI.Class"
        mc:Ignorable="d"
        x:Name="Config"
        Title="Monster Hunter Frontier Z Overlay"
        Height="720" Width="1280" ResizeMode="CanResize"
        Foreground="#cdd6f4" 
        Closed="Config_Closed"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF" xmlns:lvc1="clr-namespace:LiveChartsCore.SkiaSharpView;assembly=LiveChartsCore.SkiaSharpView"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.FontWeight="Medium"
        TextElement.FontSize="14"
        FontFamily="{materialDesign:MaterialDesignFont}"
        BorderBrush="#b4befe">
    <!--Background="#1e1e2e"-->
    <Window.Resources>
        <ResourceDictionary>
            <ObjectDataProvider x:Key="FontFamilies"
                            MethodName="GetFontFamilies"
                            ObjectType="{x:Type fonts:Fonts}"
                            xmlns:fonts="clr-namespace:System.Windows.Media;assembly=PresentationCore" />
            <local:OptionToTemplateConverter x:Key="OptionToTemplateConverter" />
            <local:OptionToVisibilityConverter x:Key="OptionToVisibilityConverter" />
            <local:XamlIconToViewBoxConverter x:Key="XamlIconToViewBoxConverter"/>
            <DataTemplate x:Key="DefaultTemplate">
                <Grid Background="#7f1e1e2e">
                    <TextBlock TextWrapping="Wrap" MaxWidth="500" MaxHeight="500" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center">
                        Welcome to the Quest Logs statistics section! Here you can modify the YouTube link of your runs, view weapon usage, see your most recent quest times and much more!
                        <LineBreak/>
                        <LineBreak/>
                        Please keep in mind that if you update the overlay version or re-install the game, the database file may get overwritten. It is recommended to make a periodic backup of the MHFZ_Overlay.sqlite file, found in the database folder which is inside the game folder.
                        <LineBreak/>
                        <LineBreak/>
                        Select an option from the Section drop-down menu in order to view these statistics.
                    </TextBlock>
                </Grid>
            </DataTemplate>
            <DataTemplate x:Key="CompendiumTemplate">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.RowSpan="11" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Background="#7f1e1e2e"/>

                    <Border CornerRadius="5,0,0,5" Grid.Row="0" Grid.Column="0" Grid.RowSpan="25" Width="5" Margin="0,0,5,0" Background="#bac2de" />

                    <Grid Grid.Row="0" Grid.Column="1">
                        <DockPanel Margin="5,5,5,5">
                            <StackPanel Orientation="Vertical">
                                <StackPanel Orientation="Horizontal">
                                    <Button Background="Transparent" Margin="10,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Center" Content="{Binding Converter={StaticResource XamlIconToViewBoxConverter },ConverterParameter='UI/Icons/file_download_FILL0_wght400_GRAD0_opsz48.xaml'}" Style="{StaticResource ConfigBottomButtons}" Height="50" Width="50" ToolTip="Save summary of stats to text file" Click="CompendiumBtnSaveFile_Click"/>
                                    <Button Background="Transparent" Margin="10,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Center" ToolTip="Copy compendium to clipboard as image (recommended to maximize configuration window)" Content="{Binding Converter={StaticResource XamlIconToViewBoxConverter },ConverterParameter='UI/Icons/content_copy_FILL0_wght400_GRAD0_opsz48.xaml'}" Width="50" Style="{StaticResource ConfigBottomButtons}" Height="50" Click="CompendiumBtnCopyFile_Click"/>
                                    <TextBlock Text="Summary of your statistics" Margin="10,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </StackPanel>

                                <StackPanel Orientation="Vertical" Margin="0,10,0,0" Loaded="CompendiumInformationStackPanel_Loaded">
                                    <TextBlock TextWrapping="Wrap" Loaded="Compendium_Loaded"/>
                                    <lvc:PolarChart ToolTip="Percentage is calculated by dividing the median with the highest registered value" Loaded="HunterPerformancePolarChart_Loaded" Width="500" Height="500" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                                </StackPanel>
                            </StackPanel>
                        </DockPanel>
                    </Grid>

                </Grid>
            </DataTemplate>
            <DataTemplate x:Key="GearTemplate">
                <!-- Grid structure for the "Gear" option -->
                <Grid x:Name="QuestLogGearGrid">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.RowSpan="11" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Background="#7f1e1e2e"/>

                    <Border CornerRadius="5,0,0,5" Grid.Row="0" Grid.Column="0" Grid.RowSpan="25" Width="5" Margin="0,0,5,0" Background="#94e2d5" />

                    <Grid x:Name="QuestLogGearTextGrid" Grid.Row="0" Grid.Column="1">
                        <DockPanel Margin="5,5,5,5">
                            <StackPanel Orientation="Vertical">
                                <StackPanel Orientation="Horizontal">
                                    <Button Background="Transparent" Margin="10,0,0,0" x:Name="QuestLogGearBtnSaveFile" VerticalAlignment="Center" HorizontalAlignment="Center" Content="{Binding Converter={StaticResource XamlIconToViewBoxConverter },ConverterParameter='UI/Icons/file_download_FILL0_wght400_GRAD0_opsz48.xaml'}" Style="{StaticResource ConfigBottomButtons}" Height="50" Width="50" ToolTip="Save gear to text file" Click="QuestLogGearBtnSaveFile_Click"/>
                                    <Button Background="Transparent" Margin="10,0,0,0" x:Name="QuestLogGearBtnCopyFile" VerticalAlignment="Center" HorizontalAlignment="Center" ToolTip="Copy gear to clipboard as image (recommended to maximize configuration window)" Content="{Binding Converter={StaticResource XamlIconToViewBoxConverter },ConverterParameter='UI/Icons/content_copy_FILL0_wght400_GRAD0_opsz48.xaml'}" Width="50" Style="{StaticResource ConfigBottomButtons}" Height="50" Click="QuestLogGearBtnCopyFile_Click"/>
                                    <TextBlock Text="Gear associated with the Run ID" Margin="10,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </StackPanel>
                            
                                <TextBlock Margin="0,10,0,0" ToolTip="Gear Info" Name="QuestLogGearStats" TextWrapping="Wrap" Loaded="QuestLogGearStats_Loaded"/>
                            </StackPanel>
                        </DockPanel>
                    </Grid>

                </Grid>
            </DataTemplate>
            <DataTemplate x:Key="PersonalBestTemplate">
                <!-- Grid structure for the "Personal Best" option -->
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.RowSpan="11" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Background="#7f1e1e2e"/>
                    <!--TODO: change color-->
                    <Border CornerRadius="5,0,0,5" Grid.Row="0" Grid.Column="0" Grid.RowSpan="25" Width="5" Margin="0,0,5,0" Background="#fab387" />

                    <StackPanel  Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" Orientation="Vertical" Margin="5">
                        <StackPanel Orientation="Horizontal">
                            <!--TODO: add the refresh button to the other sections-->
                            <Button Background="Transparent" BorderThickness="0" ToolTip="Refresh" Content="{Binding Converter={StaticResource XamlIconToViewBoxConverter },ConverterParameter='UI/Icons/Refresh.xaml'}"  Click="RefreshButton_Click" Width="32" Style="{StaticResource ConfigBottomButtons}" Height="32"/>

                            <ComboBox Margin="5,0,0,0" Width="300" Height="Auto" SelectedIndex="0" HorizontalAlignment="Left" FontSize="16" SelectionChanged="PersonalBestTypeComboBox_SelectionChanged">
                                <ComboBoxItem>(Quest ID) Personal Best by Date</ComboBoxItem>
                                <ComboBoxItem>(Quest ID) Personal Best by Attempts</ComboBoxItem>
                            </ComboBox>
                            <ComboBox Margin="5,0,0,0"  Width="150" Height="Auto" SelectedIndex="0" HorizontalAlignment="Left" FontSize="16" SelectionChanged="PersonalBestWeaponComboBox_SelectionChanged">
                                <ComboBoxItem>Sword and Shield</ComboBoxItem>
                                <ComboBoxItem>Dual Swords</ComboBoxItem>
                                <ComboBoxItem>Great Sword</ComboBoxItem>
                                <ComboBoxItem>Long Sword</ComboBoxItem>
                                <ComboBoxItem>Hammer</ComboBoxItem>
                                <ComboBoxItem>Hunting Horn</ComboBoxItem>
                                <ComboBoxItem>Lance</ComboBoxItem>
                                <ComboBoxItem>Gunlance</ComboBoxItem>
                                <ComboBoxItem>Tonfa</ComboBoxItem>
                                <ComboBoxItem>Switch Axe F</ComboBoxItem>
                                <ComboBoxItem>Magnet Spike</ComboBoxItem>
                                <ComboBoxItem>Light Bowgun</ComboBoxItem>
                                <ComboBoxItem>Heavy Bowgun</ComboBoxItem>
                                <ComboBoxItem>Bow</ComboBoxItem>
                            </ComboBox>
                            <TextBlock Margin="5,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Center" Text="Personal Best of solo runs of quest ID by category"/>
                        </StackPanel>
                        <lvc:CartesianChart Loaded="personalBest_Loaded" Margin="5" Width="800" Height="500" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                    </StackPanel>
                </Grid>
            </DataTemplate>
            <DataTemplate x:Key="Top20Template">
                <!-- Grid structure for the "Top 20" option -->
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.RowSpan="11" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Background="#7f1e1e2e"/>

                    <Border CornerRadius="5,0,0,5" Grid.Row="0" Grid.Column="0" Grid.RowSpan="25" Width="5" Margin="0,0,5,0" Background="#fab387" />

                    <!--listview here-->
                    <StackPanel  Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" Orientation="Vertical" Margin="5">
                        <StackPanel Orientation="Horizontal">
                            <ComboBox x:Name="weaponListTop20RunsComboBox" Width="150" Height="Auto" SelectedIndex="0" HorizontalAlignment="Left" FontSize="16" SelectionChanged="weaponListTop20RunsComboBox_SelectionChanged">
                                <ComboBoxItem>All Weapons</ComboBoxItem>
                                <ComboBoxItem>Sword and Shield</ComboBoxItem>
                                <ComboBoxItem>Dual Swords</ComboBoxItem>
                                <ComboBoxItem>Great Sword</ComboBoxItem>
                                <ComboBoxItem>Long Sword</ComboBoxItem>
                                <ComboBoxItem>Hammer</ComboBoxItem>
                                <ComboBoxItem>Hunting Horn</ComboBoxItem>
                                <ComboBoxItem>Lance</ComboBoxItem>
                                <ComboBoxItem>Gunlance</ComboBoxItem>
                                <ComboBoxItem>Tonfa</ComboBoxItem>
                                <ComboBoxItem>Switch Axe F</ComboBoxItem>
                                <ComboBoxItem>Magnet Spike</ComboBoxItem>
                                <ComboBoxItem>Light Bowgun</ComboBoxItem>
                                <ComboBoxItem>Heavy Bowgun</ComboBoxItem>
                                <ComboBoxItem>Bow</ComboBoxItem>
                            </ComboBox>
                            <TextBlock Margin="5,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Center" Text="Top 20 fastest solo runs of quest ID by category"/>
                        </StackPanel>
                        <ListView x:Name="Top20RunsListView" Loaded="Top20Runs_ListViewLoaded" VirtualizingStackPanel.IsVirtualizing="True">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Objective" Width="128">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <Image ToolTip="Objective Image" Source="{Binding ObjectiveImage}" Width="64" Height="64" HorizontalAlignment="Center" />
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Width="250"  Header="Quest Name">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding QuestName}" TextWrapping="Wrap" HorizontalAlignment="Center"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Width="128" Header="Run ID">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding RunID}" TextWrapping="Wrap" HorizontalAlignment="Center"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Width="128" Header="Quest ID">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding QuestID}" TextWrapping="Wrap" HorizontalAlignment="Center"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Width="128" Header="YouTube">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock ToolTip="Youtube ID" Text="{Binding YoutubeID}" TextWrapping="Wrap" HorizontalAlignment="Center"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Width="128" Header="Elapsed">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock ToolTip="Final Time Elapsed on Completion" Text="{Binding FinalTimeDisplay}" TextWrapping="Wrap" HorizontalAlignment="Center"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Width="128" Header="Date">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Date}" TextWrapping="Wrap" HorizontalAlignment="Center"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </StackPanel>
                </Grid>
            </DataTemplate>
            <DataTemplate x:Key="WeaponStatsTemplate">
                <!-- Grid structure for the "Weapon Stats" option -->
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.RowSpan="11" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Background="#7f1e1e2e"/>

                    <Border CornerRadius="5,0,0,5" Grid.Row="0" Grid.Column="0" Grid.RowSpan="25" Width="5" Margin="0,0,5,0" Background="#cba6f7" />

                    <StackPanel  Grid.Row="0" Grid.Column="1" Orientation="Vertical" Margin="5">
                        <ComboBox x:Name="weaponUsageGraphComboBox" Width="250" Height="Auto" SelectedIndex="0" HorizontalAlignment="Left" FontSize="16" SelectionChanged="WeaponUsageGraphComboBox_SelectionChanged">
                            <ComboBoxItem>(General) Weapon Usage</ComboBoxItem>
                            <ComboBoxItem>(Quest ID) Weapon Usage</ComboBoxItem>
                        </ComboBox>

                        <lvc:CartesianChart Loaded="weaponUsageChart_Loaded" Grid.Column="1" Grid.Row="1" x:Name="weaponUsageChart" Margin="5" Width="800" Height="500" HorizontalAlignment="Left" VerticalAlignment="Top"/>

                        <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" >
                            <Image Margin="38,0,0,0" Width="32" Height="32" Source="https://raw.githubusercontent.com/DorielRivalet/mhfz-overlay/main/img/weapon/sns.png"/>
                            <Image Margin="24,0,0,0" Width="32" Height="32" Source="https://raw.githubusercontent.com/DorielRivalet/mhfz-overlay/main/img/weapon/ds.png"/>
                            <Image Margin="24,0,0,0" Width="32" Height="32" Source="https://raw.githubusercontent.com/DorielRivalet/mhfz-overlay/main/img/weapon/gs.png"/>
                            <Image Margin="24,0,0,0" Width="32" Height="32" Source="https://raw.githubusercontent.com/DorielRivalet/mhfz-overlay/main/img/weapon/ls.png"/>
                            <Image Margin="24,0,0,0" Width="32" Height="32" Source="https://raw.githubusercontent.com/DorielRivalet/mhfz-overlay/main/img/weapon/hammer.png"/>
                            <Image Margin="24,0,0,0" Width="32" Height="32" Source="https://raw.githubusercontent.com/DorielRivalet/mhfz-overlay/main/img/weapon/hh.png"/>
                            <Image Margin="24,0,0,0" Width="32" Height="32" Source="https://raw.githubusercontent.com/DorielRivalet/mhfz-overlay/main/img/weapon/lance.png"/>
                            <Image Margin="24,0,0,0" Width="32" Height="32" Source="https://raw.githubusercontent.com/DorielRivalet/mhfz-overlay/main/img/weapon/gl.png"/>
                            <Image Margin="24,0,0,0" Width="32" Height="32" Source="https://raw.githubusercontent.com/DorielRivalet/mhfz-overlay/main/img/weapon/tonfa.png"/>
                            <Image Margin="24,0,0,0" Width="32" Height="32" Source="https://raw.githubusercontent.com/DorielRivalet/mhfz-overlay/main/img/weapon/saf.png"/>
                            <Image Margin="24,0,0,0" Width="32" Height="32" Source="https://raw.githubusercontent.com/DorielRivalet/mhfz-overlay/main/img/weapon/ms.png"/>
                            <Image Margin="24,0,0,0" Width="32" Height="32" Source="https://raw.githubusercontent.com/DorielRivalet/mhfz-overlay/main/img/weapon/lbg.png"/>
                            <Image Margin="24,0,0,0" Width="32" Height="32" Source="https://raw.githubusercontent.com/DorielRivalet/mhfz-overlay/main/img/weapon/hbg.png"/>
                            <Image Margin="24,0,0,0" Width="32" Height="32" Source="https://raw.githubusercontent.com/DorielRivalet/mhfz-overlay/main/img/weapon/bow.png"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </DataTemplate>
            <DataTemplate x:Key="MostRecentTemplate">
                <!-- Grid structure for the "Most Recent" option -->
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.RowSpan="11" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Background="#7f1e1e2e"/>

                    <Border CornerRadius="5,0,0,5" Grid.Row="0" Grid.Column="0" Grid.RowSpan="25" Width="5" Margin="0,0,5,0" Background="#a6e3a1" />

                    <!--listview here-->
                    <ListView x:Name="RecentRunsListView" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Loaded="MostRecentRuns_ListViewLoaded" VirtualizingStackPanel.IsVirtualizing="True">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Objective" Width="128">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Image ToolTip="Objective Image" Source="{Binding ObjectiveImage}" Width="64" Height="64" HorizontalAlignment="Center" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Width="250"  Header="Quest Name">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding QuestName}" TextWrapping="Wrap" HorizontalAlignment="Center"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Width="128" Header="Run ID">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding RunID}" TextWrapping="Wrap" HorizontalAlignment="Center"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Width="128" Header="Quest ID">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding QuestID}" TextWrapping="Wrap" HorizontalAlignment="Center"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Width="128" Header="YouTube">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock ToolTip="Youtube ID" Text="{Binding YoutubeID}" TextWrapping="Wrap" HorizontalAlignment="Center"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Width="128" Header="Elapsed">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock ToolTip="Final Time Elapsed on Completion" Text="{Binding FinalTimeDisplay}" TextWrapping="Wrap" HorizontalAlignment="Center"/>
