                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Width="128" Header="Date">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Date}" TextWrapping="Wrap" HorizontalAlignment="Center"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Width="96" Header="Mode">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock ToolTip="Overlay Mode" Text="{Binding ActualOverlayMode}" TextWrapping="Wrap" HorizontalAlignment="Center"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Width="96" Header="Party">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock ToolTip="Party Size" Text="{Binding PartySize}" TextWrapping="Wrap" HorizontalAlignment="Center"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </DataTemplate>
            <DataTemplate x:Key="YouTubeTemplate">
                <!-- Grid structure for the "YouTube" option -->
                <Grid>
                    <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                <Grid Grid.RowSpan="11" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Background="#7f1e1e2e"/>

                <Border CornerRadius="5,0,0,5" Grid.Row="0" Grid.Column="0" Grid.RowSpan="25" Width="5" Margin="0,0,5,0" Background="#f38ba8" />

                <StackPanel  Grid.Row="0" Grid.Column="1" Orientation="Horizontal" Margin="5">
                    <TextBlock VerticalAlignment="Center" Text="YouTube ID for the Run ID" Margin="5"/>
                    <TextBox VerticalContentAlignment="Center" Margin="5" ToolTip="Enter the YouTube video ID for the Run ID entered at the top" Width="150" Height="Auto" IsUndoEnabled="False" TextAlignment="Center" Background="#585b70" Style="{StaticResource ConfigTextField}" MaxLength="12" Loaded="YoutubeLinkTextBox_Loaded"/>
                    <Button BorderThickness="0" Foreground="#f38ba8" Background="Transparent" Margin="5" Content="&#xf03d;" ToolTip="Add ID" FontFamily="/FontAwesome.Sharp;component/fonts/#Font Awesome 6 Free Solid" Click="UpdateYoutubeLink_ButtonClick" Loaded="UpdateYoutubeLink_Loaded"/>
                    <Button BorderThickness="0" Foreground="Red" Background="Transparent" Margin="5" Content="&#xf167;" ToolTip="Open Link in Browser" FontFamily="/FontAwesome.Sharp;component/fonts/#Font Awesome 6 Brands Regular" Click="YoutubeIconButton_Click"/>
                </StackPanel>
                </Grid>
            </DataTemplate>
            <DataTemplate x:Key="StatsGraphsTemplate">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.RowSpan="11" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Background="#7f1e1e2e"/>

                    <Border CornerRadius="5,0,0,5" Grid.Row="0" Grid.Column="0" Grid.RowSpan="25" Width="5" Margin="0,0,5,0" Background="#89b4fa" />

                    <StackPanel  Grid.Row="0" Grid.Column="1" Orientation="Vertical" Margin="5">
                        <StackPanel Orientation="Horizontal">
                            <ComboBox Width="350" Height="Auto" SelectedIndex="0" HorizontalAlignment="Left" FontSize="16" SelectionChanged="GraphsComboBox_SelectionChanged">
                                <ComboBoxItem>(General) Most Quest Completions</ComboBoxItem>
                                <ComboBoxItem>(General) Quest Durations</ComboBoxItem>
                                <ComboBoxItem>(General) Most Common Objective Types</ComboBoxItem>
                                <ComboBoxItem>(General) Most Common Star Grades</ComboBoxItem>
                                <ComboBoxItem>(General) Most Common Rank Bands</ComboBoxItem>
                                <ComboBoxItem>(General) Most Common Objective</ComboBoxItem>
                                <ComboBoxItem>(General) Quests Completed by Date</ComboBoxItem>
                                <ComboBoxItem>(General) Most Common Party Size</ComboBoxItem>
                                <ComboBoxItem>(General) Most Common Set Name</ComboBoxItem>
